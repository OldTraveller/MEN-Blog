<% include ./partials/header %>
       <div class="ui main text container segment">
              <div class="ui huge header centered">TITLE : <%= blog.title %></div>
              <div class="ui top attached">
                     <div class="item" id="this" >
                            <img class="ui centered rounder image" src="<%= blog.image %>" >
                            <div class="content">
                                   <span> <%= blog.created.toDateString() %></span>
                            </div>
                            <div class="description">
                                   <h3><%= blog.body %></h3>
                            </div>
                            
                     </div>
                     <div class="container fluid">
                                   <div class="row">
                                          <form class="col-md-5 col-sm-12 twothing" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                                                 <button class="ui secondary button">DELETE</button>
                                          </form>
                                          <form class="col-md-6 col-sm-12 twothing" action="/blogs/<%= blog._id %>/edit">
                                                 <button class="ui secondary button"> EDIT </button>
                                          </form>
                                   </div>
                            </div>
              </div>
       </div>

       <style>
              .twothing {
                     padding : 10px ;
              }
       </style>
<% include ./partials/footer %>